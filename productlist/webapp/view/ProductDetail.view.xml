<mvc:View controllerName="productslist.productlist.controller.ProductDetail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.uxap"
    xmlns:forms="sap.ui.layout.form">
    <Page id="page2">
        <u:ObjectPageLayout enableLazyLoading="true" beforeNavigate="onBeforeNavigate" useIconTabBar="true" showTitleInHeaderContent="true" upperCaseAnchorBar="false" sectionChange="onSectionChange">
            <u:headerTitle>
                <u:ObjectPageDynamicHeaderTitle>
                    <u:expandedHeading>
                        <Title text="{Name}" wrapping="true"/>
                    </u:expandedHeading>

                    <u:snappedHeading>
                        <FlexBox fitContainer="true" alignItems="Center">
                            <Title text="{Name}" wrapping="true" />
                        </FlexBox>
                    </u:snappedHeading>

                    <u:expandedContent>
                        <Text text="{Description}"/>
                    </u:expandedContent>

                    <u:snappedContent>
                        <Text text="{Description}"/>
                    </u:snappedContent>

                    <u:snappedTitleOnMobile>
                        <Title text="{Description}"/>
                    </u:snappedTitleOnMobile>
                </u:ObjectPageDynamicHeaderTitle>
            </u:headerTitle>

            <u:sections>
                <u:ObjectPageSection titleUppercase="false" id="personal" title="{i18n>details}">
                    <u:subSections>
                        <u:ObjectPageSubSection id="detailsSS1" titleUppercase="false">
                            <u:blocks>
                                <forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent" width="auto">
                                    <core:Title text="{i18n>dates}"/>

                                    <Label text="{i18n>releaseDate}"/>
                                    <Text text="{ReleaseDate}"/>

                                    <Label text="{i18n>discontinuedDate}"/>
                                    <Text text="{DiscontinuedDate}"/>
                                </forms:SimpleForm>

                                <forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent" width="auto">
                                    <core:Title text="{i18n>rating}"/>

                                    <RatingIndicator value="{Rating}" iconSize="16px" />
                                </forms:SimpleForm>

                                <forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent" width="auto">
                                    <core:Title text="{i18n>price}"/>

                                    <Text text="{Price}"/>
                                </forms:SimpleForm>
                            </u:blocks>
                        </u:ObjectPageSubSection>

                        <u:ObjectPageSubSection id="personalSS2" title="Payment information" titleUppercase="false">
                            <u:blocks>
                                <!-- <personal:PersonalBlockPart1 id="part1" columnLayout="1"/> -->
                            </u:blocks>
                            <u:moreBlocks>
                                <!-- <personal:PersonalBlockPart2 id="part2" columnLayout="1"/> -->
                            </u:moreBlocks>
                        </u:ObjectPageSubSection>
                    </u:subSections>
                </u:ObjectPageSection>
            </u:sections>
        </u:ObjectPageLayout>
    </Page>
</mvc:View>